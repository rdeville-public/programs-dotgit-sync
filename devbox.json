{
  "include": [
    "github:rdeville-public/programs.devbox-plugins/main?dir=python",
    "github:rdeville-public/programs.devbox-plugins/main?dir=base"
  ],
  "env": {
    "VENV_DIR": "${PWD}/.devbox/virtenv/config_sync",
    "PYTHONPATH": "${PWD}/src"
  },
  "shell": {
    "init_hook": [
      "pip3 install pip-tools",
      "[[ -f requirements.dev.txt ]] && pip3 install -r requirements.dev.txt",
      "[[ -f requirements.prod.txt ]] && pip3 install -r requirements.prod.txt"
    ]
  }
}
